<main class="container-fluid">
  <div>
    <a
      class="btn btn-primary"
      href="/regiones/crear-region"
      id="btn-region"
    >Crear nueva region</a>
  </div>

  {{#if hasRegiones}}
    <div class="d-flex gap-2 flex-wrap">
      {{#each regiones as |region|}}
        <div class="mt-3">
          <div class="card p-2" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title">{{region.name}}</h5>
            </div>
            <div class="d-flex gap-2">
              <a
                class="btn btn-warning"
                href="/regiones/editar-region/{{this.id}}?edit=true"
              >Editar</a>
              <button
                type="button"
                class="btn btn-danger"
                data-bs-toggle="modal"
                data-bs-target="#confirmacion{{region.id}}"
              >
                Eliminar
              </button>
            </div>
          </div>
        </div>
        <div
          class="modal fade"
          id="confirmacion{{region.id}}"
          tabindex="-1"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">¿Está seguro
                  que desea eliminar esta región?</h1>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">
                <p>Se eliminaran todos los pokemones creados que tengan esta
                  region</p>
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >Cancelar</button>
                <form method="post" action="/regiones/eliminar-region">
                  <input type="hidden" name="regionId" value="{{region.id}}" />
                  <button
                    type="submit"
                    class="btn btn-danger w-100 float-end"
                  >Aceptar</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <h1>No hay Regiones creadas</h1>
  {{/if}}
</main>